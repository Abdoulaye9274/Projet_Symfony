{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_article_index') }}">Articles</a></li>
        <li class="breadcrumb-item active">{{ article.title|slice(0, 50) }}{% if article.title|length > 50 %}...{% endif %}</li>
    </ol>
</nav>

<article>
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <header class="mb-4">
                <h1 class="display-5">{{ article.title }}</h1>
                
                <div class="text-muted mb-3">
                    <small>
                        üìù By <strong>{{ article.author.fullName }}</strong> ‚Ä¢ 
                        üìÖ {{ article.createdAt|date('F j, Y \\a\\t g:i A') }}
                        {% if article.updatedAt %}
                            ‚Ä¢ ‚úèÔ∏è Updated {{ article.updatedAt|date('F j, Y \\a\\t g:i A') }}
                        {% endif %}
                        {% if not article.published %}
                            ‚Ä¢ <span class="badge bg-warning text-dark">Draft</span>
                        {% endif %}
                    </small>
                </div>

                {% if article.summary %}
                    <div class="alert alert-light border-start border-primary border-4">
                        <strong>Summary:</strong> {{ article.summary }}
                    </div>
                {% endif %}

                {% if app.user and article.author == app.user %}
                    <div class="mb-3">
                        <a href="{{ path('app_article_edit', {id: article.id}) }}" class="btn btn-outline-primary">
                            ‚úèÔ∏è Edit Article
                        </a>
                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            üóëÔ∏è Delete Article
                        </button>
                    </div>
                {% endif %}
            </header>

            <div class="article-content">
                {{ article.content|nl2br }}
            </div>
        </div>
    </div>
</article>

{% if app.user and article.author == app.user %}
    <!-- Delete Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this article? This action cannot be undone.</p>
                    <strong>{{ article.title }}</strong>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form method="post" action="{{ path('app_article_delete', {id: article.id}) }}" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                        <button type="submit" class="btn btn-danger">Delete Article</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endif %}

<div class="mt-5">
    <div class="d-flex justify-content-between">
        <a href="{{ path('app_article_index') }}" class="btn btn-outline-secondary">
            ‚Üê Back to Articles
        </a>
        {% if app.user %}
            <a href="{{ path('app_article_new') }}" class="btn btn-primary">
                ‚ûï Write New Article
            </a>
        {% endif %}
    </div>
</div>
{% endblock %}