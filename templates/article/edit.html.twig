{% extends 'base.html.twig' %}

{% block title %}Edit Article{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-8 mx-auto">
        <h1>‚úèÔ∏è Edit Article</h1>
        
        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
        
        <div class="card">
            <div class="card-body">
                <div class="mb-3">
                    {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.title) }}
                    {{ form_errors(form.title) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.summary, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.summary) }}
                    {{ form_errors(form.summary) }}
                    <div class="form-text">Optional: A brief summary that appears in article listings</div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.content, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.content) }}
                    {{ form_errors(form.content) }}
                </div>

                <div class="mb-3 form-check">
                    {{ form_widget(form.published, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(form.published, null, {'label_attr': {'class': 'form-check-label'}}) }}
                    {{ form_errors(form.published) }}
                    <div class="form-text">Check to make this article visible to other users</div>
                </div>
            </div>
            
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">
                    üíæ Update Article
                </button>
                <a href="{{ path('app_article_show', {id: article.id}) }}" class="btn btn-outline-secondary">
                    Cancel
                </a>
                <button type="button" class="btn btn-outline-danger float-end" data-bs-toggle="modal" data-bs-target="#deleteModal">
                    üóëÔ∏è Delete
                </button>
            </div>
        </div>
        
        {{ form_end(form) }}

        <!-- Delete Modal -->
        <div class="modal fade" id="deleteModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Confirm Delete</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete this article? This action cannot be undone.</p>
                        <strong>{{ article.title }}</strong>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <form method="post" action="{{ path('app_article_delete', {id: article.id}) }}" class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                            <button type="submit" class="btn btn-danger">Delete Article</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}